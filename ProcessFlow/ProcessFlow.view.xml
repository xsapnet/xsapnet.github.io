<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns="sap.suite.ui.commons"
	controllerName="sap.suite.ui.commons.sample.ProcessFlowMultipleRootNodes.ProcessFlow">
	<m:Panel>
		<m:Label text="Process Flow sample case with zooming and highlight path buttons - multiple root nodes" />
		<m:HBox renderType="Bare">
			<m:Button text="Zoom In" press="onZoomIn" />
			<m:Button text="Zoom Out" press="onZoomOut" />
			<m:ToggleButton text="Optimize Layout" press="onOptimizeLayout" />
			<m:ToggleButton
				text="Toggle HighlightPath"
				type="Accept"
				press="onHighlightPath" />
		</m:HBox>
		<ProcessFlow
			id="processflow"
			foldedCorners="true"
			wheelZoomable="false"
			class="PFLayoutSpec"
			nodes="{/nodes}"
			lanes="{/lanes}">
			<nodes>
				<ProcessFlowNode
					laneId="{lane}"
					nodeId="{id}"
					title="{title}"
					children="{children}"
					state="{state}"
					stateText="{stateText}"
					texts="{texts}"
					highlighted="{highlighted}"
					focused="{focused}"
					titleAbbreviation="{titleAbbreviation}" />
			</nodes>
			<lanes>
				<ProcessFlowLaneHeader
					laneId="{id}"
					iconSrc="{icon}"
					text="{label}"
					position="{position}" />
			</lanes>
		</ProcessFlow>
	</m:Panel>
</mvc:View>
